  },
  "homepage": "https://github.com/step-security/linkinator-action#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "linkinator": "6.1.2"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.2",
    "axios": "^1.8.4",
    "c8": "^10.1.2",
    "mocha": "^11.0.0",
    "nock": "^14.0.4",
    "semistandard": "^17.0.0",
